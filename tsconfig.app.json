{
  "extends": ["@vue/tsconfig/tsconfig.dom.json"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "es2020",
    "skipLibCheck": true
  }
}
